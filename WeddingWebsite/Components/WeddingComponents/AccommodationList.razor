@using WeddingWebsite.Models.Accommodation
@using WeddingWebsite.Components.Elements
@using WeddingWebsite.Models.ConfigInterfaces
@using LinkButton = WeddingWebsite.Components.Elements.LinkButton

@using WeddingWebsite.Models.WebsiteElement

@inject IStringProvider StringProvider

<table>
    <thead>
    <tr>
        <th>@StringProvider.Name</th>
        <th>@StringProvider.Price</th>
        <th>@StringProvider.Distance</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var hotel in Hotels) {
        <tr>
            <td>
                <LinkButton Url="@hotel.Link" Variant="ButtonVariant.Outlined">@hotel.Name</LinkButton>
            </td>
            <td>@hotel.ApproximatePrice</td>
            <td>@StringProvider.NumMinutesShort(hotel.DrivingTimeFromVenueMinutes)</td>
        </tr>
    }
    </tbody>
</table>

@code {
    [Parameter]
    public required IEnumerable<Hotel> Hotels { get; set; }
}
